<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Ty.AvaloniaBase.Views.ConformDialog"
		Width="300" Height="200"
        Title="ConformDialog">
	<Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,*" Margin="20">
		<TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="{Binding .}" FontSize="20" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center"></TextBlock>
		<Button Grid.Row="1" Grid.Column="0" x:Name="ok">
			确定
		</Button>
		<Button Grid.Row="1" Grid.Column="1" x:Name="cancel">
			取消
		</Button>
	</Grid>
</Window>
